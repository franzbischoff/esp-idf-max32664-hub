# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs
# http://editorconfig.org

root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[{*.cpp, *.hpp, *.c, *.h}]
indent_size = 4
max_line_length = 120

[{*.md,*.rst}]
trim_trailing_whitespace = false

[{Dockerfile.*}]
indent_style = space
indent_size = 2
max_line_length = 120

[{Kconfig}]
indent_style = space
indent_size = 4
max_line_length = 120

[{*.cmake,CMakeLists.txt}]
indent_style = space
indent_size = 4
max_line_length = 120

[{*.sh,*.yml,*.yaml}]
indent_style = space
indent_size = 2
